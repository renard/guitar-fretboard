\RequirePackage{pgfkeys}
\RequirePackage{lilyglyphs}
\usepackage[inline]{enumitem}



\newcommand{\newChord}[2][]{
  \pgfkeys{
    /chord/#2/.cd,
    name/.initial = #2,
    tex/.initial = #2,
    tex fs/.initial = #2,
    intervals/.initial = {},
    #1
  }
}


\ExplSyntaxOn
\NewDocumentCommand{\getChordIntervalsTex}{m}{%
  \tl_set:Nn \l_interval { #1 }%
  \regex_extract_once:nVNTF { \A \*(.+) \Z } \l_interval \l_interval_seq%
        {%
          \tl_set:Nn \l_matched_interval {\seq_item:Nn \l_interval_seq {2}}%
          \l_matched_interval
          {\color{red}\expandafter\getInterval{\l_matched_interval}{tex~fs}}%
        }%
        {%
          \expandafter\getInterval{\l_interval}{tex~fs}%
        }%
}%
\cs_generate_variant:Nn \regex_extract_once:nnNTF { nVNTF }
\ExplSyntaxOff


\newcommand{\getChordIntervals}[1]{%
  \begin{itemize*}[%
      afterlabel={},
      before={(},
      after={)},
      label={},
      mode=unboxed,
      itemjoin={,\space}]%
    \edef\alist{\getChord{#1}{intervals}}%
    \foreach \i in \alist{%
    \item\getChordIntervalsTex{\i}%
      %\getInterval{\i}{tex fs}
    %%\item\expandafter\getChordIntervalsTex\expandafter{\i}
    }%
  \end{itemize*}%
}%


